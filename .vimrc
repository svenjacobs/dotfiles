syntax on

filetype indent plugin on

set autoindent
set background=dark
set backspace=indent,eol,start
set cmdheight=2
set confirm
set cursorline
set encoding=UTF-8
set expandtab
set fileformat=unix
set hlsearch
set ignorecase
set incsearch
set nobackup
set nocompatible
set nowritebackup
set nu rnu
set relativenumber
set ruler
set scrolloff=2
set shiftwidth=4
set showcmd
set showmode
set sidescrolloff=2
set smartindent
set smarttab
set softtabstop=4
set tabstop=4
set undofile
set visualbell
"set termguicolors
set listchars=tab:→·,space:·
set list

highlight LineNr ctermfg=grey
highlight CursorLine cterm=bold ctermbg=blue ctermfg=white
highlight CursorLineNR ctermfg=white cterm=bold

let g:vim_markdown_folding_disabled = 1

